{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}
<main class="main">
  {{#with data}} 
  {{!-- <form method="POST" action="/purchase-submit?id={{id}}" class="form-card"> --}}
  {{> heading title="Інформація про замовлення"}}
  <div class="info__block">
    {{>info title='id' value=id}}
  </div>
  {{>divider}}
  <div class="info__block">
    {{>info title="Ім'я:" value=firstname}}
    {{>info title="Прізвище:" value=lastname}}
   {{>info title="Телефон:" value=phone}}
   {{>info title="Пошта:" value=email}}
  </div>
  {{>divider}}
  <div class="info__block">
    {{>info title="Назва:" value=title}}
    {{>info title="Коментар:" value=comment}}
  </div>
  {{>divider}}
  <div class="info__block">
    {{>info title="Вартість товару:" value=productPrice}}
    {{>info title="Вартість доставки:" value=deliveryPrice}}
    {{>info title="Загальна вартість:" value=totalPrice}}
    {{>info title="Нараховано бонусів:" value=bonus}}
  </div>
  {{>divider}}
 <a href="purchase-edit?id={{id}}">
  {{>button text="Змінити дані"}}
 </a>
  
  {{/with}}
</main>


